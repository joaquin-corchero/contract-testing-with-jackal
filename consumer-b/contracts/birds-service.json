{
    "consumer-b": {
        "birds-service": {
            "get birds": {
                "birds are returned": {
                    "request": {
                        "baseUrl": "http://localhost:8090",
                        "path": "/api/birds",
                        "method": "GET",
                        "timeout": 1000,
                        "headers": {
                            "version": 1
                        }
                    },
                    "response": {
                        "statusCode": 200,
                        "body": [
                            {
                                "className": "Joi.string()",
                                "classCommonName": "Joi.string()",
                                "familyName": "Joi.string()",
                                "familyCommonName": "Joi.string()",
                                "id": "Joi.number().integer()",
                                "speciesUrl": "Joi.string()"
                            }
                        ]
                    }
                }
            },
            "create bird": {
                "A bird can be created": {
                    "request": {
                        "baseUrl": "http://localhost:8090",
                        "path": "/api/birds",
                        "method": "POST",
                        "timeout": 1000,
                        "headers": {
                            "Content-Type": "application/json"
                        },
                        "body": {
                            "className": "Pepero class",
                            "classCommonName": "Pepero is a common name",
                            "familyName": "Pepero",
                            "familyCommonName": "Pepero animalis",
                            "speciesUrl": "http://google.com"
                        }
                    },
                    "response": {
                        "statusCode": 201,
                        "body": "Joi.string().equal('Created')"
                    }
                },
                "Wrong object won't create bird": {
                    "request": {
                        "baseUrl": "http://localhost:8090",
                        "path": "/api/birds",
                        "method": "POST",
                        "timeout": 1000,
                        "headers": {
                            "Content-Type": "application/json"
                        },
                        "body": {
                            "something": "Pepero"
                        }
                    },
                    "response": {
                        "statusCode": 400,
                        "body": "Joi.string().equal('Bad Request')"
                    }
                }
            }
        }
    }
}