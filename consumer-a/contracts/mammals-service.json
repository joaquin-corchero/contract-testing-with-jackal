{
    "consumer-a": {
        "mammals-service": {
            "get mammals": {
                "All the mammals are returned": {
                    "request": {
                        "baseUrl": "http://localhost:8085",
                        "path": "/api/mammals",
                        "method": "GET",
                        "timeout": 1000
                    },
                    "response": {
                        "statusCode": 200,
                        "body": [
                            {
                                "familyName": "Joi.string()",
                                "familyCommonName": "Joi.string()",
                                "id": "Joi.string()",
                                "speciesUrl": "Joi.string()"
                            }
                        ]
                    }
                }
            },
            "get mammal": {
                "Mammal is returned": {
                    "before": [
                        {
                            "name": "Create a test mammal",
                            "request": {
                                "baseUrl": "http://localhost:8085",
                                "path": "/api/mammals",
                                "method": "POST",
                                "timeout": 1000,
                                "headers": {
                                    "Content-Type": "application/json"
                                },
                                "body": {
                                    "id": "TestToFindIt666",
                                    "familyName": "familyName",
                                    "familyCommonName": "familyCommonName",
                                    "speciesUrl": "speciesUrl"
                                }
                            },
                            "response": {
                                "statusCode": 201
                            }
                        }
                    ],
                    "after": [
                        {
                            "name": "Delete the mammal",
                            "request": {
                                "baseUrl": "http://localhost:8085",
                                "path": "/api/mammals/TestToFindIt666",
                                "method": "DELETE",
                                "timeout": 1000
                            },
                            "response": {
                                "statusCode": 204
                            }
                        }
                    ],
                    "request": {
                        "baseUrl": "http://localhost:8085",
                        "path": "/api/mammals/TestToFindIt666",
                        "method": "GET",
                        "timeout": 1000
                    },
                    "response": {
                        "statusCode": 200,
                        "body": {
                            "id": "Joi.string().equal('TestToFindIt666')",
                            "familyName": "Joi.string().equal('familyName')",
                            "familyCommonName": "Joi.string().equal('familyCommonName')",
                            "speciesUrl": "Joi.string().equal('speciesUrl')"
                        }
                    }
                },
                "The mammal not existing is not found":
                {
                    "request": {
                        "baseUrl": "http://localhost:8085",
                        "path": "/api/mammals/SomethingNotGood",
                        "method": "GET",
                        "timeout": 1000
                    },
                    "response": {
                        "statusCode": 404
                    }
                }
            },
            "creating a mammal": {
                "A mammal can be created": {
                    "after": [
                        {
                            "name": "Delete the mammal",
                            "request": {
                                "baseUrl": "http://localhost:8085",
                                "path": "/api/mammals/mammalToMakeDissapear",
                                "method": "DELETE",
                                "timeout": 1000
                            },
                            "response": {
                                "statusCode": 204
                            }
                        }
                    ],
                    "request": {
                        "baseUrl": "http://localhost:8085",
                        "path": "/api/mammals",
                        "method": "POST",
                        "timeout": 1000,
                        "headers": {
                            "Content-Type": "application/json"
                        },
                        "body": {
                            "id": "mammalToMakeDissapear",
                            "familyName": "Pepero",
                            "familyCommonName": "Pepero animalis",
                            "speciesUrl": "http://google.com"
                        }
                    },
                    "response": {
                        "statusCode": 201,
                        "body": {
                            "id":"Joi.string().equal('mammalToMakeDissapear')",
                            "familyName":"Joi.string().equal('Pepero')",
                            "familyCommonName":"Joi.string().equal('Pepero animalis')",
                            "speciesUrl":"Joi.string().equal('http://google.com')"
                        }
                    }
                },
                "Fields must exist": {
                    "request": {
                        "baseUrl": "http://localhost:8085",
                        "path": "/api/mammals",
                        "method": "POST",
                        "timeout": 1000,
                        "headers": {
                            "Content-Type": "application/json"
                        },
                        "body": {
                            "id_": "mammalToMakeDissapear",
                            "familyName_": "Pepero",
                            "familyCommonName_": "Pepero animalis",
                            "speciesUrl_": "http://google.com"
                        }
                    },
                    "response": {
                        "statusCode": 400,
                        "body": { "message": "Joi.string().equal('Wrong parameters')"}
                    }
                }
            }
        }
    }
}